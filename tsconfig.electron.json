{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": false,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src/desktop/**/*", "src/utils.ts"],
  "exclude": ["node_modules"]
}
